{
    "name": "zicht/framework-extra-bundle",
    "description": "Utilities for Symfony",
    "type": "symfony-bundle",
    "authors": [
        {
            "name": "Zicht online",
            "email": "info@zicht.nl"
        }
    ],
    "require": {
        "php": "^7",
        "symfony/symfony": "^2.7",
        "twig/twig": "^2",
        "zicht/util": "~1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7",
        "sonata-project/admin-bundle": "*",
        "zicht/standards-php": "*@stable"
    },
    "autoload": {
        "psr-0": {
            "": [
                "src/",
                "tests/"
            ]
        },
        "exclude-from-classmap": [
            "/tests/"
        ]
    },
    "minimum-stability": "stable",
    "license": "MIT",
    "scripts": {
        "lint": [
            "./vendor/bin/phpcs -s src/Zicht/ --standard=vendor/zicht-standards/php/Zicht --extensions=php"
        ],
        "test": [
            "php7.1 ./vendor/phpunit/phpunit/phpunit -c phpunit.xml.dist"
        ]
    }
}
